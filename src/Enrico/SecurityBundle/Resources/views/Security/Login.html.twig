<h1>Area riservata</h1>

{% if error %}
    <div><font color=red><h3>{{ error.message }}</h3></font></div>
{% endif %}

<form action="{{ path('login_check') }}" method="post">
    <label for="username">Username:</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" /><br>

    <label for="password">Password:</label>
    <input type="password" id="password" name="_password" /><br>

    {#
        Se si desidera controllare l'URL a cui l'utente viene rinviato in caso di successo (maggiori dettagli qui sotto)
        <input type="hidden" name="_target_path" value="/account" />
    #}

    <input type="submit" name="login" />
</form>